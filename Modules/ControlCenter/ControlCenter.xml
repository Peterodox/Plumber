                        <Anchor point="CENTER" relativeKey="$parent" relativePoint="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Button>

    <Button name="PlumberSquareButtonArtTemplate" virtual="true">
        <Size x="28" y="28"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" parentArray="SkinnableObjects" snapToPixelGrid="false" texelSnappingBias="0">
