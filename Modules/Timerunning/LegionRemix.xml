				<Alpha fromAlpha="1" toAlpha="0" duration="0.2" startDelay="0.5" order="1" childKey="Sheen"/>
				<Scale scaleX="6" scaleY="6" duration="0.6" order="1" smoothing="IN" childKey="SheenMask"/>
