	<Script file="LegionRemix_UI.lua"/>


	<Frame name="PlumberRemixArtifactUITemplate" hidden="true" virtual="true">
		<Size x="32" y="160"/>
	</Frame>

	<Button name="PlumberLegionRemixThreeArrowsTemplate" virtual="true">
		<Size x="24" y="24"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Border">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>

	<Button name="PlumberLegionRemixNodeTemplate" virtual="true">
		<Size x="40" y="40"/>
		<Layers>
			<Layer level="OVERLAY" textureSubLevel="5">
				<FontString parentKey="RankText" inherits="SystemFont16_Shadow_ThickOutline">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="-1">
				<Texture parentKey="Border" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="0">
				<Texture parentKey="GreenGlow" alphaMode="ADD" hidden="true">
					<Size x="80" y="80"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="Anim" looping="REPEAT" setToFinalAlpha="true">
							<Alpha fromAlpha="0" toAlpha="1" duration="0.25" order="1" smoothing="OUT"/>
							<Alpha fromAlpha="1" toAlpha="0" duration="0.75" order="2" smoothing="IN"/>
						</AnimationGroup>
					</Animations>
					<Scripts>
						<OnShow>
							self.Anim:Play();
						</OnShow>
						<OnHide>
							self.Anim:Stop();
						</OnHide>
					</Scripts>
				</Texture>

				<Texture parentKey="Sheen" alphaMode="ADD" texelSnappingBias="0.0" snapToPixelGrid="false" hidden="true">
					<Size x="92" y="92"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>

				<MaskTexture parentKey="SheenMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE" hidden="true">
					<Size x="80" y="80"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Sheen"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon">
					<Size x="38" y="38"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="IconMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="38" y="38"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="AnimSheen">
				<Alpha fromAlpha="0" toAlpha="1" duration="0.05" order="1" childKey="Sheen"/>
				<Alpha fromAlpha="1" toAlpha="0" duration="0.5" startDelay="1.5" order="1" childKey="Sheen"/>
				<Scale scaleX="8" scaleY="8" duration="1.5" order="1" smoothing="IN" childKey="SheenMask"/>
			</AnimationGroup>
		</Animations>
	</Button>

	<Frame name="PlumberLegionRemixTooltipTemplate" virtual="true">
		<Size x="256" y="256"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Header" inherits="GameTooltipHeaderText" justifyH="LEFT" spacing="2">
					<Size x="240"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="-20"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Desc" inherits="GameTooltipText" justifyH="LEFT" justifyV="MIDDLE" spacing="2">
					<Size x="240"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Header" relativePoint="BOTTOMLEFT" x="0" y="-4"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" alpha="0.5">
					<Size x="64" y="64"/>
					<TexCoords left="0.0625" right="0.9375" top="0.0625" bottom="0.9375"/>
					<Anchors>
						<Anchor point="TOPRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="-18" y="-18"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="IconMask" file="Interface/AddOns/Plumber/Art/Timerunning/TooltipIconMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="BackgroundFrame" setAllPoints="true" useParentLevel="true">
				<Size x="256" y="256"/>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Texture" setAllPoints="true" file="Interface/AddOns/Plumber/Art/Timerunning/TooltipBackground.png" alpha="0.8">
							<TextureSliceMode mode="Tiled"/>
							<TextureSliceMargins left="32" right="32" top="32" bottom="60"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Frame>

	<Button name="PlumberLegionRemixCardTemplate" enableMouse="true" enableMouseMotion="true" virtual="true">
