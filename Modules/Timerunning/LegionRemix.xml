					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="ActivateFX" texelSnappingBias="0.0" snapToPixelGrid="false" alpha="0" hidden="true">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="ActivateFXMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="LEFT" x="104"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="ActivateFX"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="5">
				<Texture parentKey="Div" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="32" y="96"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<Texture parentKey="EdgeGlow1">
					<Size x="1024" y="1024"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="TOPLEFT" x="80" y="64"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="EdgeMask1" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="EdgeGlow1"/>
					</MaskedTextures>
				</MaskTexture>
				<Texture parentKey="EdgeGlow2">
					<Size x="1024" y="1024"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="TOP" x="0" y="64"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="EdgeMask2" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="EdgeGlow2"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="ObjectiveTrackerHeaderFont" justifyH="CENTER" mixin="AutoScalingFontStringMixin" maxLines="1">
					<Size x="176"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="LEFT" x="104" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Subtitle" inherits="GameFontNormal" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent" relativePoint="LEFT" x="104" y="-4"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="5">
				<Texture parentKey="HoverHighlight" alphaMode="ADD" hidden="true">
					<Size x="512" y="160"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Background" relativePoint="LEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="AnimEdge" looping="REPEAT">
				<Rotation degrees="360" duration="30" order="1" childKey="EdgeGlow1"/>
				<Rotation degrees="360" duration="30" order="1" childKey="EdgeGlow2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="AnimActivateFX" setToFinalAlpha="true">
				<Alpha fromAlpha="0" toAlpha="1" duration="0.05" order="1" childKey="ActivateFX"/>
				<Alpha fromAlpha="1" toAlpha="0" duration="0.5" startDelay="1.5" order="1" childKey="ActivateFX"/>
				<Scale scaleX="28" scaleY="28" duration="1.5" order="1" smoothing="IN" childKey="ActivateFXMask"/>
			</AnimationGroup>
		</Animations>
	</Button>

